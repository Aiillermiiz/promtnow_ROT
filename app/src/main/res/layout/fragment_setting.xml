<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".setting.FragmentSetting">

    <TextView
        android:id="@+id/setting_text_setting"
        android:text="Setting"
        android:background="#111f4d"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_below="@+id/rel_top"
        android:textSize="35dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_below="@+id/setting_text_setting"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rel_set"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:id="@+id/setting_text_editpro"
            android:text="Edit Profile"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:textColor="#454545"
            android:drawablePadding="10dp"
            android:textSize="20dp"
            android:drawableLeft="@drawable/setting_icon_editpro"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
            <TextView
                android:layout_below="@+id/setting_text_editpro"
                android:background="#E3E3E3"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        <TextView
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:id="@+id/setting_text_changepass"
            android:text="Change Password"
            android:drawablePadding="10dp"
            android:textSize="20dp"
            android:textColor="#454545"
            android:layout_below="@+id/setting_text_editpro"
            android:drawableLeft="@drawable/setting_icon_changepass"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

            <TextView
                android:layout_below="@+id/setting_text_changepass"
                android:background="#E3E3E3"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/setting_text_logout"
            android:padding="10dp"
            android:background="#F3F3F3"
            android:layout_below="@+id/setting_text_changepass"
            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/setting_icon_logout"
                android:layout_alignParentLeft="true"
                android:layout_width="34dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:background="@drawable/logout"
                android:layout_height="34dp"/>
            <TextView
                android:text="Logout"
                android:textColor="#454545"
                android:layout_toEndOf="@+id/setting_icon_logout"
                android:textSize="20dp"
                android:paddingLeft="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
    <Button
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/add_back"
        android:id="@+id/setting_btn_back"
        android:layout_width="58dp"
        android:layout_margin="4dp"
        android:padding="3dp"
        android:background="@drawable/signup_btn_back"
        android:layout_height="58dp"/>
</RelativeLayout>
</layout>