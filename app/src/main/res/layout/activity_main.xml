<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:strokeAttrs="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:background="@drawable/bg_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/text_login"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="L"
                    android:textStyle="italic"
                    android:textColor="#FFFFFF"
                    android:textSize="50dp" />
                <TextView
                    android:drawableLeft="@drawable/ic_adb_black_24dp"
                    android:layout_width="38dp"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="GIN"
                    android:textStyle="italic"
                    android:textColor="#A8A8A8"
                    android:textSize="50dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/text_new_acc"
                android:text="Your account is..."
                android:textSize="17dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_above="@+id/rel_input"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/rel_input"
                android:layout_width="300dp"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                tools:context=".LoginActivity">

                <LinearLayout
                    android:id="@+id/rel_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/log_input_gmail"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:drawableLeft="@drawable/login_icon_mail"
                        android:drawablePadding="15dp"
                        android:hint="e-mail address..."
                        android:inputType="textEmailAddress"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:textColor="#707070"
                        android:textColorHint="#BFBEBE"
                        android:textSize="25dp" />
                    <EditText
                        android:id="@+id/log_input_password"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@+id/input_gmail"
                        android:layout_marginTop="20dp"
                        android:drawableLeft="@drawable/login_icon_key"
                        android:drawablePadding="15dp"
                        android:hint="password..."
                        android:inputType="textPassword"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:textColor="#707070"
                        android:textColorHint="#BFBEBE"
                        android:textSize="25dp" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rel_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel_2"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/forgot_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Forgot password?"
                        android:layout_marginBottom="10dp"
                        android:textColor="#505050"
                        android:textSize="17dp" />
                    <Button
                        android:layout_below="@+id/forgot_password"
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:textColor="#ffffff"
                        android:text="let go"
                        android:textSize="22dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_btn_disable"
                        android:enabled="false" />
                    <TextView
                        android:layout_below="@+id/btnLogin"
                        android:id="@+id/text_dont_have_acc"
                        android:layout_marginTop="20dp"
                        android:textColor="#000000"
                        android:textSize="17dp"
                        android:layout_centerHorizontal="true"
                        android:text="Don't have an account?"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@+id/text_dont_have_acc"
                        android:id="@+id/btnSignup"
                        android:layout_centerHorizontal="true"
                        android:text="@string/sing_up_here"
                        android:textSize="19dp"
                        android:textColor="#2AEDE7"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="130dp"
                        android:layout_height="40dp"/>
                </RelativeLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">
                <TextView
                    android:text="PromptNow"
                    android:layout_gravity="center"
                    android:textColor="#3F51B5"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium"
                    android:drawableRight="@drawable/ic_android_black_24dp"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Reimbursement of Traveling"
                    android:textColor="#000000"
                    android:textSize="13dp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
</layout>