<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:strokeAttrs="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:fillViewport="true"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allan"
                    android:text="R"
                    android:textColor="#5B30A8"
                    android:textSize="60dp"
                    android:textStyle="bold" />
                <TextView
                    android:drawableLeft="@drawable/ic_adb_black_24dp"
                    android:layout_width="wrap_content"
                    android:rotation="10"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allan"
                    android:text="T"
                    android:textStyle="bold"
                    android:textColor="#F16595"
                    android:textSize="60dp" />

            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:paddingTop="20dp"
                android:paddingBottom="50dp"
                android:elevation="10dp"
                android:background="@drawable/card_login"
                tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/rel_2"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/log_input_gmail"
            android:layout_width="250dp"
            android:hint="gmail..."
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:textSize="20dp"
            android:textColor="#707070"
            android:textColorHint="#BFBEBE"
            android:paddingRight="10dp"
            android:background="@drawable/login_input"
            android:layout_height="50dp"/>
        <EditText
            android:id="@+id/log_input_password"
            android:hint="password..."
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:textColor="#707070"
            android:textColorHint="#BFBEBE"
            android:inputType="textPassword"
            android:paddingRight="10dp"
            android:paddingLeft="15dp"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:background="@drawable/login_input"
            android:layout_below="@+id/input_gmail"
            android:layout_width="250dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rel_3"
        android:layout_below="@+id/rel_2"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_disable"
            android:fontFamily="@font/acme"
            android:text="login"
            android:paddingRight="25dp"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/ic_arrow_forward_black_24dp"
            android:enabled="false"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_3"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/alegreya_sans"
            android:gravity="center"
            android:text="forgot password?"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btnSignup"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_signup"
            android:fontFamily="@font/acme"
            android:text="sign up"
            android:layout_marginTop="30dp"
            android:paddingRight="20dp"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/ic_person_add_black_24dp"
            android:textColor="#3F51B5"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="bottom"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="PromptNow"
                    android:layout_gravity="center"
                    android:textColor="#202020"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_android_black_24dp"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Reimbursement of Traveling"
                    android:textColor="#2196F3"
                    android:textSize="13dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>