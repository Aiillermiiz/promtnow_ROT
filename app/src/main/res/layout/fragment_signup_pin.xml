<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.FragmentSignupPin"
    tools:ignore="UselessLeaf">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Create Your Pin"
            android:textColor="#000000"
            android:textSize="25dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/reg_input_pin1"
                android:background="@drawable/input_pin"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/reg_input_pin2"
                android:background="@drawable/input_pin"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/reg_input_pin3"
                android:background="@drawable/input_pin"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/reg_input_pin4"
                android:background="@drawable/input_pin"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/reg_input_pin5"
                android:background="@drawable/input_pin"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/reg_input_pin6"
                android:background="@drawable/input_pin"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <GridLayout
            android:padding="16dp"
            android:columnCount="3"
            android:rowCount="4"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/num_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@drawable/reg_btn_num_pin"
                android:fontFamily="@font/abril_fatface"
                android:textColor="#7D8FF3"
                android:gravity="center"
                android:text="1"
                android:textSize="30dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/num_2"
                android:textSize="30dp"
                android:text="2"
                android:fontFamily="@font/abril_fatface"
                android:textColor="#7D8FF3"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="45dp"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_column="1"
                android:layout_row="0"/>
            <TextView
                android:id="@+id/num_3"
                android:textSize="30dp"
                android:text="3"
                android:fontFamily="@font/abril_fatface"
                android:textColor="#7D8FF3"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginLeft="45dp"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_column="2"
                android:layout_row="0" />
            <TextView
                android:id="@+id/num_4"
                android:textSize="30dp"
                android:text="4"
                android:fontFamily="@font/abril_fatface"
                android:textColor="#7D8FF3"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_column="0"
                android:layout_row="1"/>
            <TextView
                android:id="@+id/num_5"
                android:textSize="30dp"
                android:text="5"
                android:fontFamily="@font/abril_fatface"
                android:textColor="#7D8FF3"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="45dp"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_column="1"
                android:layout_row="1"/>
            <TextView
                android:id="@+id/num_6"
                android:textSize="30dp"
                android:text="6"
                android:fontFamily="@font/abril_fatface"
                android:textColor="#7D8FF3"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="45dp"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_column="2"
                android:layout_row="1"/>
            <TextView
                android:id="@+id/num_7"
                android:textSize="30dp"
                android:text="7"
                android:fontFamily="@font/abril_fatface"
                android:textColor="#7D8FF3"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_column="0"
                android:layout_row="2"/>
            <TextView
                android:id="@+id/num_8"
                android:textSize="30dp"
                android:text="8"
                android:fontFamily="@font/abril_fatface"
                android:textColor="#7D8FF3"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="45dp"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_column="1"
                android:layout_row="2"/>
            <TextView
                android:id="@+id/num_9"
                android:textSize="30dp"
                android:text="9"
                android:fontFamily="@font/abril_fatface"
                android:textColor="#7D8FF3"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="45dp"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_column="2"
                android:layout_row="2"/>
            <TextView
                android:id="@+id/num_back"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_arrow_back_black_24dp"
                android:layout_column="0"
                android:layout_row="3"/>
            <TextView
                android:id="@+id/num_0"
                android:textSize="30dp"
                android:text="0"
                android:fontFamily="@font/abril_fatface"
                android:textColor="#7D8FF3"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="45dp"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_column="1"
                android:layout_row="3"/>
            <TextView
                android:id="@+id/num_delete"
                android:textSize="30dp"
                android:layout_marginLeft="45dp"
                android:layout_height="70dp"
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_backspace_black_24dp"
                android:layout_column="2"
                android:layout_row="3"/>

        </GridLayout>

    </LinearLayout>

</FrameLayout>
</layout>