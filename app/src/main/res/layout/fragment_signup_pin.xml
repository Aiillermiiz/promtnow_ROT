<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.FragmentSignupPin"
    tools:ignore="UselessLeaf">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:background="#fff"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alegreya_sans_sc"
            android:gravity="center"
            android:text="สร้างรหัส PIN"
            android:textColor="#222222"
            android:textSize="40dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/reg_input_pin1"
                android:background="@drawable/input_pin"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/reg_input_pin2"
                android:background="@drawable/input_pin"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/reg_input_pin3"
                android:background="@drawable/input_pin"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/reg_input_pin4"
                android:background="@drawable/input_pin"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/reg_input_pin5"
                android:background="@drawable/input_pin"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/reg_input_pin6"
                android:background="@drawable/input_pin"
                android:layout_width="30dp"
                android:layout_margin="10dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <GridLayout
            android:columnCount="3"
            android:rowCount="4"
            android:layout_marginTop="200dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/num_1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/reg_btn_num_pin"
                android:gravity="center"
                android:text="1"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="#222222"
                android:textSize="34dp" />
            <TextView
                android:id="@+id/num_2"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="60dp"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="2"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="#222222"
                android:textSize="34dp"/>
            <TextView
                android:id="@+id/num_3"
                android:textSize="34dp"
                android:text="3"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="sans-serif"
                android:textColor="#222222"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_column="2"
                android:layout_row="0" />
            <TextView
                android:id="@+id/num_4"
                android:textSize="34dp"
                android:text="4"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="#222222"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_column="0"
                android:layout_row="1"/>
            <TextView
                android:id="@+id/num_5"
                android:textSize="34dp"
                android:text="5"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="sans-serif"
                android:textColor="#222222"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_column="1"
                android:layout_row="1"/>
            <TextView
                android:id="@+id/num_6"
                android:textSize="34dp"
                android:text="6"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textColor="#222222"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_column="2"
                android:layout_row="1"/>
            <TextView
                android:id="@+id/num_7"
                android:textSize="34dp"
                android:text="7"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="sans-serif"
                android:textColor="#222222"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_column="0"
                android:layout_row="2"/>
            <TextView
                android:id="@+id/num_8"
                android:textSize="34dp"
                android:text="8"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="sans-serif"
                android:textColor="#222222"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_column="1"
                android:layout_row="2"/>
            <TextView
                android:id="@+id/num_9"
                android:textSize="34dp"
                android:text="9"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textColor="#222222"
                android:gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_column="2"
                android:layout_row="2"/>
            <TextView
                android:id="@+id/num_back"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:drawableStart="@drawable/ic_arrow_back_black_24dp"
                android:layout_column="0"
                android:layout_row="3"/>
            <TextView
                android:id="@+id/num_0"
                android:textSize="34dp"
                android:text="0"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif"
                android:textColor="#222222"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/reg_btn_num_pin"
                android:layout_gravity="center"
                android:layout_column="1"
                android:layout_row="3"/>
            <TextView
                android:id="@+id/num_delete"
                android:textSize="30dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:drawableStart="@drawable/ic_backspace_black_24dp"
                android:layout_column="2"
                android:layout_row="3"/>
        </GridLayout>
    </LinearLayout>
</FrameLayout>
</layout>