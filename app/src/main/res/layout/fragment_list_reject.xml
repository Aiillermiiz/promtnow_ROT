<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".approve.FragmentListApprove">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="#111f4d"
                android:id="@+id/rel_top"
                android:paddingTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_top"
                    android:text="Reimbursement of Traveling"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="28dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/rel_pro_set"
                android:layout_below="@+id/rel_top"
                android:background="#111f4d"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <LinearLayout
                android:background="#FAFAFA"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingTop="5dp"
                android:id="@+id/rel_rd"
                android:layout_below="@+id/rel_pro_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/name"
                        android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"
                        android:layout_width="165dp"
                        android:drawablePadding="5dp"
                        android:layout_height="wrap_content"
                        android:text="Khwanchai"
                        android:textColor="#000000"
                        android:textSize="18dp" />
                    <RelativeLayout
                        android:layout_below="@+id/name"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/text_code"
                            android:drawableLeft="@drawable/ic_code_black_24dp"
                            android:layout_width="wrap_content"
                            android:drawablePadding="5dp"
                            android:layout_height="wrap_content"
                            android:text="Code/"
                            android:textColor="#000000"
                            android:textSize="18dp" />
                        <TextView
                            android:layout_toEndOf="@+id/text_code"
                            android:layout_width="wrap_content"
                            android:drawablePadding="5dp"
                            android:layout_height="wrap_content"
                            android:text="8834"
                            android:textColor="#8598FF"
                            android:textSize="18dp" />
                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:drawableLeft="@drawable/ic_date_range_black_24dp"
                        android:id="@+id/text_req"
                        android:drawablePadding="5dp"
                        android:text="Request date"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/add_date"
                        android:layout_below="@+id/text_req"
                        android:textSize="17dp"
                        android:hint="mm/dd/yy"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>            </LinearLayout>
            <TextView
                android:background="@drawable/card_btn_add"
                android:id="@+id/icon_check"
                android:drawableTop="@drawable/ic_cancel_black_24dp"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/rel_top"
                android:layout_height="70dp"/>
            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:id="@+id/rel_pos"
                android:paddingBottom="10dp"
                android:layout_below="@+id/rel_rd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/department"
                    android:drawableLeft="@drawable/ic_location_searching_black_24dp"
                    android:text="developer"
                    android:drawablePadding="5dp"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/con"
                    android:text="/"
                    android:textSize="18dp"
                    android:layout_toEndOf="@id/department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/position"
                    android:layout_toEndOf="@+id/con"
                    android:text="android developer"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/line"
                android:layout_below="@+id/rel_pos"
                android:layout_width="match_parent"
                android:background="#979797"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:background="#ffffff"
                android:id="@+id/rel_list"
                android:layout_above="@+id/text_price"
                android:layout_below="@+id/line"
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/add_recycle_main"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    tools:listitem="@layout/list_item_of_add_main"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_num"
                android:background="#DFF5FF"
                android:padding="6dp"
                android:layout_above="@+id/text_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="เลขที่เอกสาร"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:text="PN-AC001"
                    android:textStyle="bold"
                    android:textColor="#260B57"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/text_price"
                android:background="#F8F8F8"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_above="@+id/rel_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:id="@+id/text_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif"
                    android:text="Total"
                    android:textColor="#404040"
                    android:textSize="30dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/add_price_show"
                    android:textSize="29dp"
                    android:text="1500.00"
                    android:textColor="#8BC34A"
                    android:layout_toEndOf="@+id/text_total"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_btn"
                android:background="#111f4d"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="65dp">
                <Button
                    android:id="@+id/reject_btn_back"
                    android:drawableRight="@drawable/add_back"
                    android:background="@drawable/signup_btn_back"
                    android:padding="5dp"
                    android:layout_margin="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="58dp"
                    android:layout_height="58dp"/>
                <Button
                    android:id="@+id/reject_btn_edit"
                    android:padding="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="4dp"
                    android:drawableRight="@drawable/ic_edit_black_24dp"
                    android:background="@drawable/edit_pro_btn_edit"
                    android:layout_alignParentRight="true"
                    android:layout_width="58dp"
                    android:layout_height="58dp"/>
                <Button
                    android:id="@+id/reject_btn_delete"
                    android:drawableRight="@drawable/ic_delete_black_24dp"
                    android:layout_width="58dp"
                    android:padding="9dp"
                    android:layout_margin="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_delete"
                    android:layout_height="58dp"/>
            </RelativeLayout>
        </RelativeLayout>

    </FrameLayout>
</layout>