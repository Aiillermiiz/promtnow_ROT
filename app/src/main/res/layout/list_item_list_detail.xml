<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/card_list_request"
        android:layout_height="170dp">

        <RelativeLayout
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/rel_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/reson"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="4dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="4dp"
                        android:text="ติดต่อราชการ"
                        android:textColor="#3F51B5"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/project_no"
                        android:text="TIS"
                        android:textStyle="bold"
                        android:textSize="13dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:paddingTop="4dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="4dp"
                        android:textColor="#F84055"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rel_2"
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_1"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="4-sep-2563"
                    android:textColor="#424242"
                    android:textSize="19dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rel_3"
                android:paddingTop="3dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_2"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From"
                        android:textSize="13dp"
                        android:textColor="#878787" />

                    <TextView
                        android:id="@+id/from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PN"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="13dp"
                        android:textColor="#424242"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To"
                        android:textSize="13dp"
                        android:textColor="#878787" />

                    <TextView
                        android:id="@+id/to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RD#7"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="13dp"
                        android:textColor="#424242"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rel_3"
                android:background="#E8E8E8" />

            <TextView
                android:id="@+id/text_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"
                android:drawableLeft="@drawable/ic_payment_black_24dp"
                android:drawablePadding="5dp"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Amount"
                android:textColor="#424242"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/amoumt"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_toEndOf="@+id/text_amount"
                android:gravity="right"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="฿ 150"
                android:textColor="#673AB7"
                android:textSize="16dp" />


        </RelativeLayout>
    </RelativeLayout>
</layout>