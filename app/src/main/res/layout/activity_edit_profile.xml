<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile.FragmentProfile">

        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rel_top"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/profile_btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/btn_back_color"/>

                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="#393939"
                    android:text="แก้ไขโปรไฟล์"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:layout_below="@+id/rel_top"
                android:background="#eeeeee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/rel_img"
                android:layout_marginTop="10dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/rel_top">
                <RelativeLayout
                    android:background="@drawable/card_icon_circle"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/signup_icon_bg" />

                </RelativeLayout>
                <TextView
                    android:id="@+id/btn_image"
                    android:elevation="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/profile_btn_update"
                    android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
                    android:padding="5dp" />
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="60dp"
                android:layout_below="@+id/rel_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/name"
                        android:layout_below="@+id/text_fname"
                        android:paddingStart="20dp"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/text_fname"
                        android:text="ชื่อผู้ใช้"
                        android:textColor="#5A5A5A"
                        android:background="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/lname"
                        android:textColor="#000"
                        android:paddingStart="20dp"
                        android:layout_below="@+id/text_lname"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/text_lname"
                        android:text="นามสกุล"
                        android:textColor="#5A5A5A"
                        android:background="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/gmail"
                        android:textColor="#000"
                        android:paddingStart="20dp"
                        android:paddingEnd="10dp"
                        android:layout_below="@+id/txt_gmail"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/txt_gmail"
                        android:text="อีเมล"
                        android:textColor="#5A5A5A"
                        android:background="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/stf_code"
                        android:textColor="#000"
                        android:paddingStart="20dp"
                        android:inputType="number"
                        android:layout_below="@+id/text_stf_code"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/text_stf_code"
                        android:text="รหัสพนักงาน"
                        android:textColor="#5A5A5A"
                        android:background="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/dep"
                        android:textColor="#ACACAC"
                        android:paddingStart="20dp"
                        android:layout_below="@+id/text_dep"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/text_dep"
                        android:text="แผนก"
                        android:textColor="#5A5A5A"
                        android:background="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:id="@+id/spinner_dep"
                        android:paddingStart="20dp"
                        android:layout_below="@+id/text_dep"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/txt_dep"
                        android:text="เลือกแผนก"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:layout_below="@+id/text_dep"
                        android:gravity="center_vertical"
                        android:background="#fff"
                        android:layout_marginEnd="50dp"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/pos"
                        android:textColor="#ACACAC"
                        android:paddingStart="20dp"
                        android:layout_below="@+id/text_pos"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/text_pos"
                        android:text="ตำเเหน่ง"
                        android:textColor="#5A5A5A"
                        android:background="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:id="@+id/spinner_pos"
                        android:paddingStart="20dp"
                        android:layout_below="@+id/text_pos"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"/>
                    <TextView
                        android:id="@+id/txt_pos"
                        android:text="เลือกตำแหน่ง"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/text_pos"
                        android:background="#fff"
                        android:layout_marginEnd="50dp"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="26dp"/>
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_update"
                android:text="อัพเดตโปรไฟล์"
                android:textColor="#ffffff"
                android:textSize="23dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/profile_btn_update"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="60dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </FrameLayout>
</layout>