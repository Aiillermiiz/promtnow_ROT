<?xml version="1.0" encoding="utf-8"?>
<layout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting.FragmentChangePassword">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_change_pro"
            android:text="Change password"
            android:background="#111f4d"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/rel_top"
            android:textSize="35dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_below="@+id/text_change_pro"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:elevation="5dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/changepass_input_curr_password"
                android:hint="current password..."
                android:textSize="20dp"
                android:inputType="text"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/card_input"
                android:textColorHint="#8F8F8F"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/changepass_icon_key"
                android:textColor="#333333"
                android:layout_width="match_parent"
                android:layout_toEndOf="@+id/lay_1"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/changepass_input_new_password"
                android:hint="new password..."
                android:textSize="20dp"
                android:textColor="#333333"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/card_input"
                android:layout_below="@+id/changepass_input_curr_password"
                android:inputType="text"
                android:textColorHint="#8F8F8F"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_autorenew_black_24dp"
                android:layout_width="match_parent"
                android:layout_toEndOf="@+id/lay_1"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/changepass_input_confirm_password"
                android:hint="confirm new password..."
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:background="@drawable/card_input"
                android:textColor="#333333"
                android:inputType="text"
                android:layout_below="@+id/changepass_input_new_password"
                android:textColorHint="#8F8F8F"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_check_black_24dp"
                android:layout_width="match_parent"
                android:layout_toEndOf="@+id/lay_1"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_btn"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:drawableLeft="@drawable/add_back"
                    android:id="@+id/changepass_btn_back"
                    android:layout_width="58dp"
                    android:padding="3dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/signup_btn_back"
                    android:layout_height="58dp"/>
                <Button
                    android:drawableStart="@drawable/changepass_icon_check"
                    android:id="@+id/changepass_btn_confirm"
                    android:layout_width="58dp"
                    android:enabled="false"
                    android:padding="3dp"
                    android:layout_margin="4dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/signup_btn_signup_disable"
                    android:layout_height="58dp"/>

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
</layout>