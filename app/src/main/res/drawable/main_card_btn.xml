<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:startColor="#DCDDE3"
                android:endColor="#DCDDE3"
                android:type="linear" />
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#DCDDE3"
                android:angle="-90"
                android:endColor="#DCDDE3"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

</layer-list>