<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:startColor="#00B6E3"
                android:endColor="#00B6E3"
                android:type="linear" />
            <corners android:radius="50dp"/>
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="#fff" />
            <corners android:radius="50dp"/>
        </shape>
    </item>

</layer-list>